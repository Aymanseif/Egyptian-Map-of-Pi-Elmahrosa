# Core API communication settings for backend services
# Version: v1.0.0
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api/v1
NEXT_PUBLIC_API_TIMEOUT=30000

# Maps Configuration
# Mapbox integration settings for location services and geospatial features
# Version: v2.0.0
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here

# Pi Network Configuration
# Pi Network integration settings for authentication and transactions
# Version: v1.0.0
NEXT_PUBLIC_PI_API_KEY=your_pi_network_api_key_here
NEXT_PUBLIC_PI_NETWORK_URL=https://api.minepi.com

# Application Configuration
# General application settings including environment and localization
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_DEFAULT_LANGUAGE=ar
NEXT_PUBLIC_FALLBACK_LANGUAGE=en
NEXT_PUBLIC_APP_NAME=Egyptian Map of Pi

# Upload Configuration
# File upload constraints and configurations
NEXT_PUBLIC_MAX_UPLOAD_SIZE=5242880
NEXT_PUBLIC_SUPPORTED_IMAGE_TYPES=image/jpeg,image/png,image/webp
NEXT_PUBLIC_MAX_LISTING_IMAGES=5